@model WebConsultorioOdontologico.Models.Citum

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="mx-5">
    <h1>Crear Cita</h1>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label class="control-label">Nombre Completo del Paciente</label>
                    <select asp-for="IdPaciente" class="form-control" asp-items="ViewBag.IdPaciente"></select>
                </div>
                <div class="form-group">
                    <label class="control-label">Estado de la Cita</label>
                    <select asp-for="IdRegistro" class="form-control" asp-items="ViewBag.IdRegistro"></select>
                </div>
                <div class="form-group">
                    <label class="control-label">Fecha de la Cita</label>
                    <input asp-for="Fecha" class="form-control" />
                    <span asp-validation-for="Fecha" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Hora de la Cita</label>
                    <input asp-for="Hora" class="form-control" />
                    <span asp-validation-for="Hora" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Tratamiento</label>
                    <input asp-for="Tratamiento" class="form-control" />
                    <span asp-validation-for="Tratamiento" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Pago</label>
                    <select asp-for="Pago" class="form-control">
                        <option>CANCELADO</option>
                        <option>PENDIENTE</option>
                    </select>
                    <span asp-validation-for="Pago" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Pago Pendiente</label>
                    <input asp-for="ACuenta" class="form-control" />
                    <span asp-validation-for="ACuenta" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Crear" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Volver a la lista</a>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
