@model WebConsultorioOdontologico.Models.Citum

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="site-section site-block-3">
    <div class="container">

        <h1 style="color:red">CREAR NUEVA CITA</h1>
        <hr />
        <div class="row" style="background-color: #333333">
            <div class="col-md-12">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label class="control-label" style="color:red">Nombre Completo del Paciente</label>
                        <select asp-for="IdPaciente" class="form-control" asp-items="ViewBag.IdPaciente"></select>
                    </div>
                    <div class="form-group">
                        <label class="control-label" style="color:red">Estado de la Cita</label>
                        <select asp-for="IdRegistro" class="form-control" asp-items="ViewBag.IdRegistro"></select>
                    </div>
                    <div class="form-group">
                        <label class="control-label" style="color:red">Fecha de la Cita</label>
                        <input asp-for="Fecha" class="form-control" />
                        <span asp-validation-for="Fecha" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label" style="color:red">Hora de la Cita</label>
                        <input asp-for="Hora" class="form-control" placeholder="00:00:00" />
                        <span asp-validation-for="Hora" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label" style="color:red">Tratamiento</label>
                        <input asp-for="Tratamiento" class="form-control" />
                        <span asp-validation-for="Tratamiento" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label" style="color:red">Estado del Pago</label>
                        <select asp-for="Pago" class="form-control">
                            <option>CANCELADO</option>
                            <option>PENDIENTE</option>
                        </select>
                        <span asp-validation-for="Pago" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label" style="color:red">Pago Pendiente</label>
                        <input asp-for="ACuenta" class="form-control" />
                        <span asp-validation-for="ACuenta" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Crear" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>

        <div>
            <i class="fas fa-share fa-flip-horizontal" style="color:red "></i>
            <a asp-action="Index" style="color:red ">Volver a la lista</a>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
