@model WebConsultorioOdontologico.Models.Usuario

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="site-section site-block-3">
    <div class="container">
        <h1 style="color:red">CREAR NUEVO USUARIO</h1>
        <hr />
        <div class="row" style="background-color: #333333">
            <div class="col-md-12">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label class="control-label" style="color:red"> Asignar Personal</label>
                        <select asp-for="IdPersonal" class="form-control" asp-items="ViewBag.IdPersonal"></select>
                    </div>
                    <div class="form-group">
                        <label class="control-label" style="color:red">Usuario</label>
                        <input asp-for="Usuario1" class="form-control" />
                        <span asp-validation-for="Usuario1" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Crear" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>

        <div>
            <i class="fas fa-share fa-flip-horizontal" style="color:red "></i>
            <a asp-action="Index" style="color:red ">Volver a la lista</a>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
